<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Course Summary"
        android:textAlignment="center"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

    </TextView>

    <RelativeLayout
        android:id="@+id/list_item_view"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <include
            android:id="@+id/course_summary"
            layout="@layout/list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </include>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/audio_play_layer"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/list_item_view"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/course_audio_play"
            android:layout_width="41dp"
            android:layout_height="47dp"
            android:layout_below="@+id/course_summary"
            android:background="@color/colorWhite"
            android:scaleType="fitCenter"
            android:layout_gravity="end"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_play_button_black" />



    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/audio_play_layer"
        android:layout_width="match_parent"
        android:id="@+id/list_view_slides"
        android:layout_height="wrap_content">
        <ListView
            android:layout_below="@id/audio_play_layer"
            android:id="@+id/slide_list_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.806"
            tools:layout_editor_absoluteX="0dp">

        </ListView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        android:layout_below="@id/list_view_slides"
        android:background="@color/design_default_color_on_primary"
        tools:layout_editor_absoluteX="2dp">


        <ImageButton
            android:id="@+id/create_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="72dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_create">

        </ImageButton>

        <ImageButton
            android:id="@+id/edit_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="72dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.839"
            app:layout_constraintStart_toEndOf="@+id/create_button"
            app:srcCompat="@drawable/ic_edit">

        </ImageButton>

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="72dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.549"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_delete">

        </ImageButton>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>
