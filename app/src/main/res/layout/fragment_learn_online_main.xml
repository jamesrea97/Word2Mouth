<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_online_test"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".learn.main.offline.LearnOfflineMainFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </SearchView>

        <ImageButton

            android:id="@+id/account_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/language_button"
            app:layout_constraintEnd_toStartOf="@+id/category_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.592"
            app:srcCompat="@drawable/ic_account_black">

        </ImageButton>

        <TextView
            android:id="@+id/label_teacher"

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:hint="Profile"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/account_button"
            app:layout_constraintStart_toStartOf="@+id/account_button"
            app:layout_constraintTop_toBottomOf="@+id/account_button">

        </TextView>

        <ImageButton
            android:id="@+id/category_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/language_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.592"
            app:srcCompat="@drawable/ic_category">

        </ImageButton>

        <TextView
            android:id="@+id/label_language"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:hint="Language"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/language_button"
            app:layout_constraintStart_toStartOf="@+id/language_button"
            app:layout_constraintTop_toBottomOf="@+id/language_button">

        </TextView>


        <TextView
            android:id="@+id/label_category"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:hint="Category"
            android:textAlignment="center"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/category_button"
            app:layout_constraintStart_toStartOf="@+id/category_button"
            app:layout_constraintTop_toBottomOf="@+id/category_button">

        </TextView>


        <ImageButton
            android:id="@+id/language_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="268dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/category_button"

            app:layout_constraintStart_toEndOf="@+id/account_button"
            app:srcCompat="@drawable/ic_flag">

        </ImageButton>

        <ImageButton
            android:id="@+id/search_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="96dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"

            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_language"
            app:srcCompat="@drawable/ic_search">

        </ImageButton>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>