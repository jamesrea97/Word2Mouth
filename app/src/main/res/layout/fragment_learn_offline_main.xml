<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".learn.main.offline.LearnOfflineMainFragment">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ListView
        android:id="@+id/list_view_course_offline"
        android:layout_width="match_parent"
        android:layout_height="495dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-5dp">

    </ListView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="209dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/design_default_color_on_primary"
        tools:layout_editor_absoluteX="2dp">

        <ImageButton
            android:id="@+id/share_button"
            android:contentDescription="@string/share"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="80dp"
            android:background="@android:color/transparent"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/learn_button"
            app:srcCompat="@drawable/ic_share"
            android:layout_marginStart="24dp">

        </ImageButton>

        <ImageButton
            android:id="@+id/receive_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="80dp"
            android:layout_toRightOf="@id/share_button"
            android:background="@android:color/transparent"
            android:paddingStart="30dp"
            android:paddingTop="25dp"

            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/learn_button"
            app:srcCompat="@drawable/ic_receive"
            android:contentDescription="@string/todo"
            android:layout_toEndOf="@id/share_button"
            android:paddingRight="30dp"
            android:paddingLeft="30dp">

        </ImageButton>

        <ImageButton
            android:id="@+id/learn_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/share_button"
            android:layout_marginBottom="80dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/todo"
            android:paddingTop="25dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_learn">

        </ImageButton>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>