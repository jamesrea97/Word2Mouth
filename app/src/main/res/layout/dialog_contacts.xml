<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="259dp"
        android:background="@color/colorPrimary">
        <RelativeLayout
            android:id="@+id/video_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="Teacher Selection"
                android:textColor="@color/colorAccent"
                android:gravity="center_horizontal">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/video_selector"
            android:layout_marginTop="52dp">

            <ImageButton
                android:id="@+id/d_search"
                android:layout_width="104dp"
                android:layout_height="92dp"
                android:layout_alignTop="@+id/d_following"
                android:layout_alignRight="@id/d_following"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_search_white"
                android:layout_alignEnd="@id/d_following"
                android:layout_marginEnd="25dp"
                android:layout_alignParentEnd="true">

            </ImageButton>

            <ImageButton
                android:id="@+id/d_following"
                android:layout_width="104dp"
                android:layout_height="92dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="25dp"
                android:background="@color/colorPrimary"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_people_white"
                android:textSize="30sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp">

            </ImageButton>
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>