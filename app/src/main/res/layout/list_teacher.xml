<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
android:layout_height="match_parent">


    <TextView
        android:id="@+id/name_Teacher"
        android:layout_width="218dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/list_audio_button"
        android:layout_toLeftOf="@+id/list_audio_button"
        android:layout_toRightOf="@id/list_item_thumbnail"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_thumbnail"
        app:layout_constraintTop_toTopOf="@+id/list_item_thumbnail" />



    <ImageButton
        android:id="@+id/list_item_thumbnail"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_teach_black">

    </ImageButton>

</androidx.constraintlayout.widget.ConstraintLayout>